<Window x:Class="PersianInvoicing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PersianInvoicing.Views"
        Title="سیستم مدیریت فاکتور فروش" Height="850" Width="1400"
        FlowDirection="RightToLeft"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradientBrush}" Padding="25,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="15" Padding="15" Margin="0,0,20,0">
                    <TextBlock Text="📊" FontSize="28"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="سیستم مدیریت فاکتور فروش" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}"/>
                    <TextBlock Text="نسخه پیشرفته با قابلیت چاپ و گزارش‌گیری" FontSize="14" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl x:Name="MainTabControl" Grid.Row="1" Margin="15">
            <TabItem Header="📈 داشبورد">
                <views:DashboardView/>
            </TabItem>
            <TabItem Header="📦 مدیریت کالاها">
                <views:ProductsView/>
            </TabItem>
            <TabItem Header="🧾 صدور فاکتور">
                <views:CreateInvoiceView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>