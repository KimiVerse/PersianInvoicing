<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style 1: Modern -->
    <ControlTemplate x:Key="ModernHeaderTemplate" TargetType="ContentControl">
        <Border Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource PrimaryAccentBrush}" BorderThickness="0,0,0,4" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="شرکت شما" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryAccentBrush}"/>
                    <TextBlock Text="آدرس، شهر، و اطلاعات تماس شما در اینجا" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
                <Border Grid.Column="1" Background="{StaticResource TertiaryBackgroundBrush}" Width="90" Height="90" CornerRadius="45">
                    <TextBlock Text="لوگو" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}" FontSize="18"/>
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- Style 2: Classic -->
    <ControlTemplate x:Key="ClassicHeaderTemplate" TargetType="ContentControl">
        <Border Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="20">
            <StackPanel>
                <TextBlock Text="صورتحساب رسمی فروش" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>
                <Separator Background="{StaticResource BorderBrush}"/>
                <TextBlock Text="فروشنده: نام کامل شرکت شما" FontSize="14" Margin="0,10,0,0"/>
                <TextBlock Text="شماره ثبت: ۱۲۳۴۵۶" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"/>
            </StackPanel>
        </Border>
    </ControlTemplate>

    <!-- Style 3: Elegant -->
    <ControlTemplate x:Key="ElegantHeaderTemplate" TargetType="ContentControl">
        <Border Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Line Grid.Column="0" X1="0" Y1="0" X2="0" Y2="80" Stroke="{StaticResource WarningAccentBrush}" StrokeThickness="3" Margin="0,0,20,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="فاکتور فروش" FontSize="32" FontWeight="Light" Foreground="{StaticResource WarningAccentBrush}"/>
                    <TextBlock Text="نام شرکت شما" FontSize="14" Foreground="{StaticResource MutedTextBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </ControlTemplate>

    <!-- Style 4: Professional -->
    <ControlTemplate x:Key="ProfessionalHeaderTemplate" TargetType="ContentControl">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="1" Fill="{StaticResource SecondaryAccentBrush}" Width="150"/>
            <!-- Use a Border to provide Padding, and place the StackPanel inside the Border -->
            <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}" Margin="0,0,-1,0" Padding="20">
                <StackPanel>
                    <StackPanel.Resources>
                        <!-- You can add resources here if needed -->
                    </StackPanel.Resources>
                    <TextBlock Text="صورتحساب" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="برای خدمات و محصولات ارائه شده" Foreground="{StaticResource MutedTextBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
    </ControlTemplate>

</ResourceDictionary>