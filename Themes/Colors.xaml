<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Palette -->
    <Color x:Key="PrimaryBackgroundColor">#1F2937</Color>
    <Color x:Key="SecondaryBackgroundColor">#374151</Color>
    <Color x:Key="TertiaryBackgroundColor">#4B5563</Color>
    <Color x:Key="BorderColor">#6B7280</Color>
    <Color x:Key="PrimaryTextColor">#F9FAFB</Color>
    <Color x:Key="SecondaryTextColor">#D1D5DB</Color>
    <Color x:Key="MutedTextColor">#9CA3AF</Color>
    <Color x:Key="PrimaryAccentColor">#3B82F6</Color>
    <Color x:Key="SecondaryAccentColor">#10B981</Color>
    <Color x:Key="WarningAccentColor">#F59E0B</Color>
    <Color x:Key="DangerAccentColor">#EF4444</Color>
    <Color x:Key="HoverColor">#4B5563</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="{StaticResource TertiaryBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{StaticResource PrimaryAccentColor}"/>
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="{StaticResource SecondaryAccentColor}"/>
    <SolidColorBrush x:Key="WarningAccentBrush" Color="{StaticResource WarningAccentColor}"/>
    <SolidColorBrush x:Key="DangerAccentBrush" Color="{StaticResource DangerAccentColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3B82F6" Offset="0"/>
        <GradientStop Color="#10B981" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BackgroundGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1F2937" Offset="0"/>
        <GradientStop Color="#111827" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>