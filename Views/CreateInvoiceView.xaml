<UserControl x:Class="PersianInvoicing.Views.CreateInvoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="{StaticResource VazirmatnFont}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ProgressBar Grid.RowSpan="5" Height="6" VerticalAlignment="Top" IsIndeterminate="{Binding IsLoading}" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Dynamic Invoice Header -->
        <ContentControl Grid.Row="0" Margin="0,0,0,20">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Template" Value="{StaticResource ModernHeaderTemplate}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding InvoiceHeaderStyle}" Value="Classic">
                            <Setter Property="Template" Value="{StaticResource ClassicHeaderTemplate}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding InvoiceHeaderStyle}" Value="Elegant">
                            <Setter Property="Template" Value="{StaticResource ElegantHeaderTemplate}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding InvoiceHeaderStyle}" Value="Professional">
                            <Setter Property="Template" Value="{StaticResource ProfessionalHeaderTemplate}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <!-- Header Style Selector -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="🎨 قالب سربرگ:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0" FontSize="14"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding AvailableHeaderStyles}" SelectedItem="{Binding InvoiceHeaderStyle}" Height="40" HorizontalAlignment="Left" MinWidth="180" FontSize="14"/>
                <TextBlock Grid.Column="2" Text="💡 قالب مناسب کسب‌وکار خود را انتخاب کنید" FontStyle="Italic" Foreground="{StaticResource MutedTextBrush}" VerticalAlignment="Center" FontSize="13"/>
            </Grid>
        </Border>

        <!-- Customer Information Section -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20">
            <Grid Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="👤 نام مشتری:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                    <TextBox Text="{Binding CustomerName}" Height="40" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="15,0">
                    <TextBlock Text="🧾 شماره فاکتور:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                    <TextBox Text="{Binding InvoiceNumber}" Height="40" IsReadOnly="True" Background="{StaticResource TertiaryBackgroundBrush}" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="📅 تاریخ:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                    <DatePicker SelectedDate="{Binding IssueDate}" Height="40" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Add Item and Items Section -->
        <Border Grid.Row="3" Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="{StaticResource TertiaryBackgroundBrush}" CornerRadius="12,12,0,0" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="🛍️ انتخاب کالا:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                            <ComboBox ItemsSource="{Binding AvailableProducts}" SelectedItem="{Binding SelectedProduct}" DisplayMemberPath="ProductName" Height="40" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="15,0">
                            <TextBlock Text="🔢 تعداد:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                            <TextBox Text="{Binding Quantity}" Height="40" FontSize="14"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="➕ افزودن ردیف" Height="45" FontWeight="SemiBold" FontSize="14" Background="{StaticResource SecondaryAccentBrush}" Command="{Binding AddInvoiceItemCommand}" Margin="15,25,0,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Padding" Value="20,0"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                <DataGrid Grid.Row="1" ItemsSource="{Binding CurrentInvoiceItems}" AutoGenerateColumns="False" CanUserDeleteRows="False" Margin="20" MinHeight="250" RowHeight="50" FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="کالا" Binding="{Binding Product.ProductName}" Width="2*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="تعداد" Binding="{Binding Quantity}" Width="*"/>
                        <DataGridTextColumn Header="قیمت واحد" Binding="{Binding UnitPrice, StringFormat='{}{0:N0}'}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="مبلغ کل" Binding="{Binding RowTotal, StringFormat='{}{0:N0}'}" Width="*" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="عملیات" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑️ حذف" Background="{StaticResource DangerAccentBrush}" ToolTip="حذف آیتم" FontSize="12" Command="{Binding DataContext.RemoveInvoiceItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="Padding" Value="12,6"/>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer Section -->
        <Border Grid.Row="4" Background="{StaticResource SecondaryBackgroundBrush}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
            <Grid Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="💰 جمع کل:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                    <Border Background="{StaticResource TertiaryBackgroundBrush}" CornerRadius="8" BorderThickness="2" BorderBrush="{StaticResource SecondaryAccentBrush}" Padding="12,8">
                        <TextBlock Text="{Binding SubTotal, StringFormat='{}{0:N0} ریال'}" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource SecondaryAccentBrush}"/>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="15,0">
                    <TextBlock Text="🏷️ تخفیف:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                    <TextBox Text="{Binding Discount, UpdateSourceTrigger=PropertyChanged}" Height="40" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="15,0">
                    <TextBlock Text="✅ مبلغ نهایی:" FontWeight="SemiBold" Margin="0,0,0,8" FontSize="14"/>
                    <Border Background="{StaticResource TertiaryBackgroundBrush}" CornerRadius="8" BorderThickness="2" BorderBrush="{StaticResource WarningAccentBrush}" Padding="12,8">
                        <TextBlock Text="{Binding FinalTotal, StringFormat='{}{0:N0} ریال'}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource WarningAccentBrush}"/>
                    </Border>
                </StackPanel>
                <Button Grid.Column="3" Height="50" Margin="15,25,0,0" FontWeight="Bold" Background="{StaticResource PrimaryGradientBrush}" Command="{Binding SaveInvoiceCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Padding" Value="25,0"/>
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock FontSize="16">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="ثبت و چاپ فاکتور"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                            <Setter Property="Text" Value="در حال ثبت..."/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>