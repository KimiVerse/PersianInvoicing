<Window x:Class="PersianInvoicing.Views.CreateInvoiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="صدور فاکتور" Height="600" Width="800" FlowDirection="RightToLeft"
        FontFamily="{StaticResource Vazir}">
    <Window.Resources>
        <local:ItemRowIndexConverter x:Key="RowIndexConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/> <!-- Items -->
            <RowDefinition Height="Auto"/> <!-- Total & Buttons -->
        </Grid.RowDefinitions>
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox Text="{Binding CurrentInvoice.InvoiceNumber}" Width="100" />
            <DatePicker SelectedDate="{Binding CurrentInvoice.Date}" Width="120" />
            <TextBox Text="{Binding CurrentInvoice.CustomerName}" Width="150" />
        </StackPanel>
        <!-- Items DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ردیف" Binding="{Binding RelativeSource={RelativeSource PreviousData}, Converter={StaticResource RowIndexConverter}}" Width="50"/>
                <DataGridComboBoxColumn Header="محصول" SelectedItemBinding="{Binding Product}" ItemsSource="{Binding DataContext.Products, RelativeSource={RelativeSource AncestorType=Window}}" DisplayMemberPath="Name" />
                <DataGridTextColumn Header="تعداد" Binding="{Binding Quantity}" Width="80" />
                <DataGridTextColumn Header="قیمت واحد" Binding="{Binding UnitPrice, StringFormat={}{0:C}}" Width="100" />
                <DataGridTextColumn Header="مبلغ" Binding="{Binding Amount, StringFormat={}{0:C}}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- Total & Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="{Binding CurrentInvoice.TotalAmount, StringFormat=جمع کل: {0:C}}" FontWeight="Bold" Margin="20,0" />
            <Button Content="افزودن مورد" Command="{Binding AddItemCommand}" CommandParameter="{Binding ElementName=ProductCombo}" Margin="10,0" />
            <ComboBox x:Name="ProductCombo" ItemsSource="{Binding Products}" DisplayMemberPath="Name" SelectedValuePath="Id" Width="150" />
            <Button Content="ذخیره" Command="{Binding SaveCommand}" Margin="10,0" />
            <Button Content="چاپ" Command="{Binding PrintCommand}" Margin="10,0" />
        </StackPanel>
    </Grid>
</Window>